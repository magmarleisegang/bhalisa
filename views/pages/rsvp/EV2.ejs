<%- contentFor('main') %>
<h1>Welcome to Bhalisa.</h1>

<div class="jumbotron text-center">
<%- contentFor('body') %>
<p>Will you join us at EV2</p>
<form action="/rsvp/EV2" method="POST">
	<div class="form-group">	
		<label>Title</name>
		<select name="title">
			<option value="Mr" selected="<%= rsvp.title=='Mr' %>">Mr</option>
			<option value="Ms">Ms</option>
			<option value="Mrs">Mrs</option>
			<option value="Dr">Dr</option>
		</select>
	</div>
	<div class="form-group">
		<label>Name</name>
		<input type="text" name="name" class="form-control" value="<%= rsvp.name %>"/>
	</div>
	<div class="form-group">
		<label>Last Name</name>
		<input type="text" name="lastname" class="form-control" value="<%= rsvp.lastname %>"/>
	</div>
	<div class="form-group">
		<label>So will you join us</label>
		<input type="checkbox" name="rsvp_yes" value="<%= rsvp.rsvp_yes %>" class="rsvp-outcome"/>
		<input type="text" name="no_reason" value="<%= rsvp.no_reason %>" class="rsvp-no-reason"/>
	</div>
	<div class="form-group">
		<input type="submit" class="btn btn-primary" value="Go!"/>
	</form>
</div>
